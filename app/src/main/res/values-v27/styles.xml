<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="navigationBarColor">@color/lightColorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">?attr/navigationBarColor</item>
        <item name="android:windowAnimationStyle">@style/WindowTransitions</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:textViewStyle">@style/PulseTextViewStyle</item>
        <item name="android:buttonStyle">@style/PulseButtonStyle</item>
    </style>

    <style name="ThemeDark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="navigationBarColor">?attr/windowBackgroundColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarColor">?attr/navigationBarColor</item>
        <item name="android:windowAnimationStyle">@style/WindowTransitions</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:textViewStyle">@style/PulseTextViewStyle</item>
        <item name="android:buttonStyle">@style/PulseButtonStyle</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textColor">?secondaryTextColor</item>
        <item name="android:fontFamily">@font/manrope</item>
        <item name="android:textStyle">bold</item>
        <item name="android:navigationBarColor">?windowBackgroundColor</item>
        <item name="android:windowLightNavigationBar">?isLightMode</item>
    </style>
</resources>