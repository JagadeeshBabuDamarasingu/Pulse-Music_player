<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SettingsCategoryItemView">
        <attr name="settingItemIconBackgroundColor" format="reference" />
        <attr name="settingItemIcon" format="reference" />
        <attr name="settingItemIconColor" format="reference" />
        <attr name="settingItemTitle" format="string" />
        <attr name="settingItemText" format="string" />
        <attr name="android:textAppearance" />
        <attr name="android:textStyle" />
        <attr name="settingItemDesaturatedColorsInDarkMode" format="boolean" />
    </declare-styleable>

    <declare-styleable name="SettingsToggleableItem">
        <attr name="settingToggleableItemIcon" format="reference" />
        <attr name="settingToggleableItemTitle" format="string" />
        <attr name="settingToggleableItemText" format="string" />
        <attr name="settingToggleableItemEnabled" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ColoredIconView">
        <attr name="icon" format="reference" />
        <attr name="iconColor" format="reference" />
        <attr name="iconBackgroundColor" format="reference" />
        <attr name="desaturatedColorInDarkMode" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ColorView">
        <attr name="color" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="ValueSlider">
        <attr name="startValue" format="integer" />
        <attr name="endValue" format="integer" />
        <attr name="defaultValue" format="integer" />
        <attr name="stepSize" format="integer" />
        <attr name="unit" format="string" />
    </declare-styleable>
</resources>